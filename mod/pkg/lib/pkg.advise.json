{
    "ls": {
        "installed|i": {
            "#desc" : "Display installed language or application",
            "#n":{
                "#exec": "___x_cmd_pkg_rawpath_name_advise_ls"
            }
        },
        "activate|a": {
            "#desc": "Display activated language or application"
        },
        "all|A": {
            "#desc": "List all deactivated language or application",
            "#n": {
                "#exec": "___x_cmd_pkg___advise_ls_all_candidate"
            }
        }
    },

    "update": {
        "#desc": "update the latest yml and version of all candidate"
    },

    "version": null,
    "default_version": {
        "#desc": "Display default version of language and application",
        "#1": {
            "#exec": "___x_cmd_pkg___advise_ls_all_candidate"
        }
    },

    "ll": {
        "#desc": "Display all candidates and classification"
    },

    "download": {
        "#desc": "Download language or application package",
        "#1": {
            "#exec": "___x_cmd_pkg___advise_ls_all_candidate"
        },
        "#2": {
            "#ecec": "___x_cmd_pkg___advise_ls_all_version"}
