        "init" : {
            "#desc": "generate a function and use candidate through this function",
            "#1": {
                "#exec": "___x_cmd_pkg___advise_ls_installed_name"
            },
            "#2": {
                "#exec": "___x_cmd_pkg___adivse_ls_installed_version"
            }
        },
        "path": {
            "#desc": "Display bin path",
            "#1": {
                "#exec": "___x_cmd_pkg___advise_ls_installed_name"
