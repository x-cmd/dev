        },
        "#2": {
            "#desc": "___x_cmd_pkg___adivse_ls_installed_version"
        }
    },

    "activate": {
        "#desc": "Activate language or application",
        "#1": {
            "#1": "___x_cmd_pkg___advise_ls_installed_name"
        },
        "#2": {
            "#exec": "___x_cmd_pkg___adivse_ls_installed_version"
        }
    },
    "deactivate": {
        "#desc": "Deactivate language or application",
